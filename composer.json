{
    "name": "hpolthof/postcode-tech",
    "description": "A library to easily lookup Dutch postcodes using postcode.tech",
    "license": "gpl-3.0-or-later",
    "type": "library",
    "require": {
        "php": "^8.1",
        "hpolthof/assert-return-value":"^1.11.0",
        "symfony/http-client": "^6.4 || ^7.0 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^v3.89"
    },
    "autoload": {
        "psr-4": {
            "Hpolthof\\PostcodeTech\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hpolthof\\PostcodeTech\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse",
        "composer-validate": "composer validate --strict"
    }
}
